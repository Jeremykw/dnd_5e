%strong Armour
%br
%table#characters
  %thead
    %tr
      %th Remove
      %th Name
      %th AC modifier
      %th AC
  %tbody
    - if character_is_wearing_armour?(@items)
      - best_armour = best_armour_character_has(@character, @items)
      - @belongings.each do |belonging|
        - if single_item(belonging, @items).category.match("^armour")
          %tr
            %td= check_box_tag "remove_item[#{belonging.id}]"
            %td= belonging_name_to_link(single_item(belonging, @items), belonging, @character)
            %td= display_armour_class(single_item(belonging, @items))
            - if single_item(belonging, @items) == best_armour
              %td
                %strong= calculate_ac(@character, single_item(belonging, @items))
            - elsif single_item(belonging, @items).id == 13
              %td
                %strong= calculate_ac(@character, best_armour) + 2
            - else
              %td= calculate_ac(@character, single_item(belonging, @items))
    - else
      %tr
        %td ---
        %td ---
        %td= calculate_ac(@character, nil)