%br
%strong Adventuring Gear
%table#characters
  %thead
    %tr
      %th Remove
      %th Quantity
      %th Name
      %th Weight
  %tbody
    - @belongings.each do |belonging|
      %tr
        - if single_item(belonging, @items).category.match("^adventuring_gear")
          %td= check_box_tag "remove_item[#{belonging.id}]"
          - if !belonging.quantity
            %td 1
          - else
            %td= belonging.quantity
          - if belonging.pack
            %td= belonging_name_to_link(single_item(belonging, @items), belonging, @character) + belonging.pack.humanize.capitalize
          -else
            %td= belonging_name_to_link(single_item(belonging, @items), belonging, @character)
          %td= single_item(belonging, @items).weight