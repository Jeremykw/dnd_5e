
- # Charecter Player Name
- if params[:new]
	= text_field :character, :player_name, :placeholder => "Player Name", :class => "input", :value => "Jeremy"
- else
	= text_field :character, :player_name
- # Charecter Name
- if params[:new]
	= text_field :character, :character_name, :placeholder => "Name", :class => "input", :value => "Maziey"
- else
	= text_field :character, :character_name
- # Charecter Level
- if params[:new]
	= text_field :character, :level, :placeholder => "Level", :class => "input", :value => 20
-else
	= text_field :character, :level	
- # Charecter Experience Points
- if params[:new]
	= text_field :character, :xp, :placeholder => "Experience Points", :class => "input", :value => 355000
- else
	= text_field :character, :xp	
%br

- # Charecter Class
- if params[:new]
	= select :character, :character_class, CharactersHelper::CLASS_CHOICE_LIST, :placeholder => "Class"
	= label :character, :character_class, "Class"
- else
	%strong Class:
	#{@character.character_class.capitalize}
%br
- # Charecter Race
- # If new show racial options other wise display race
- if params[:new]
	= select :character, :race_subrace, CharactersHelper::RACE_CHOICE_LIST
	= label :character, :race_subrace, "Race"
- else
	%br
	%strong Race:
	= race(@character)
%br

- # Charecter Background
- if params[:new]
	= select :character, :past, CharactersHelper::BACKGROUND_CHOICE_LIST
	= label :character, :past, "Background"
- else
	%strong Background
	#{@character.past.capitalize}
%br
- # Charecter Alignment
= select :character, :alignment, CharactersHelper::ALIGNMENT_CHOICE_LIST
= label :character, :alignment, "Alignment"
- # Save
- if params[:new]
	%br
	= button_tag "Continue", :class => "btn"
	= link_to "Cancel", characters_path
- if params[:edit]
	%br
	= button_tag "Save #{@character.character_name}", :class => "btn"
	= link_to "Cancel", character_path(@character)